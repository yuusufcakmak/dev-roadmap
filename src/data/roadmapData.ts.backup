const Game = () => {
  const [gameState, setGameState] = useState({
    score: 0,
    level: 1,
    lives: 3,
    gameOver: false,
    paused: false
  });
  
  const updateScore = (points) => {
    setGameState(prevState => {
      const newScore = prevState.score + points;
