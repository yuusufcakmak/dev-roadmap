              ? { ...item, quantity: action.quantity }
              : item
          )
          .reduce((sum, item) => sum + (item.price * item.quantity), 0)
      };
      
    case 'CLEAR_CART':
      return { ...state, items: [], total: 0 };
      
    case 'TOGGLE_CART':
      return { ...state, isOpen: !state.isOpen };
      
    default:
      return state;
  }
