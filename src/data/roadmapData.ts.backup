  const togglePause = () => {
    setGameState(prevState => ({
      ...prevState,
      paused: !prevState.paused
    }));
  };
  
  const resetGame = () => {
    setGameState({
      score: 0,
      level: 1,
      lives: 3,
      gameOver: false,
