          setLoading(false);
        }
      }
    };
    
    fetchData();
    
    // Cleanup: Component unmount olduÄŸunda
    return () => {
      isMounted = false;
    };
  }, [url]);
  
  if (loading) return <div>Loading...</div>;
  if (!data) return <div>No data</div>;
  
  return <div>{JSON.stringify(data, null, 2)}</div>;
};
